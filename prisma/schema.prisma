// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

// ==========================================
// User Model (synced from Clerk)
// ==========================================
model User {
  id        String   @id // Clerk user ID
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tasks     Task[]
  habits    Habit[]
  expenses  Expense[]
  notes     Note[]
  moods     MoodEntry[]
}

// ==========================================
// Task Model
// ==========================================
model Task {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String?
  priority    Priority  @default(medium)
  dueDate     DateTime?
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([dueDate])
  @@index([completed])
}

enum Priority {
  low
  medium
  high
}

// ==========================================
// Habit Model
// ==========================================
model Habit {
  id         String    @id @default(cuid())
  userId     String
  name       String
  icon       String?
  frequency  Frequency @default(daily)
  targetDays Int[]     @default([]) // 0-6 for days of week
  archived   Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  user User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs HabitLog[]

  @@index([userId])
}

enum Frequency {
  daily
  weekly
}

model HabitLog {
  id        String   @id @default(cuid())
  habitId   String
  date      DateTime @db.Date
  completed Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relations
  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, date])
  @@index([habitId])
  @@index([date])
}

// ==========================================
// Expense Model
// ==========================================
model Expense {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  category  String
  note      String?
  date      DateTime @db.Date
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@index([category])
}

// ==========================================
// Note Model
// ==========================================
model Note {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  content   String
  tags      String[] @default([])
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([pinned])
}

// ==========================================
// Mood Entry Model
// ==========================================
model MoodEntry {
  id        String   @id @default(cuid())
  userId    String
  mood      Int      // 1-5 scale
  energy    Int?     // 1-5 scale (optional)
  note      String?
  date      DateTime @db.Date
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date]) // One mood entry per day per user
  @@index([userId])
  @@index([date])
}
